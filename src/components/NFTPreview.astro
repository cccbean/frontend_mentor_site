---
import NFTImg from '../assets/image-equilibrium.jpg'
import etheriumSvg from '../assets/icon-ethereum.svg'
import clockSvg from '../assets/icon-clock.svg'
import avatarImg from '../assets/image-avatar.png'
import viewSvg from '../assets/icon-view.svg'
---

<div class="grid flex-grow place-items-center bg-gray-900">
	<div class="flex max-w-sm flex-col items-center rounded-2xl bg-gray-800 p-8 font-outfit">
		<a class="view relative" href="">
			<img class="max-w-xs rounded-2xl" src={NFTImg.src} alt="" />
			<div
				class="view-div absolute top-0 hidden h-full w-full place-items-center rounded-2xl bg-[#00fff7] bg-opacity-50"
			>
				<img src={viewSvg.src} alt="" />
			</div>
		</a>
		<div class="flex flex-col gap-4 pt-6 text-gray-500">
			<a href="">
				<h3 class="text-2xl font-bold text-white hover:text-[#00fff7]">Equilibrium #3429</h3>
			</a>
			<p class="text-lg">Our Equilibrium collection promotes balance and calm</p>
			<div class="flex justify-between">
				<div class="flex items-center gap-2">
					<img class="w-3" src={etheriumSvg.src} alt="" />
					<p class="text-[#00fff7] font-bold">0.041 ETH</p>
				</div>
				<div class="flex gap-2">
					<img class="w-6" src={clockSvg.src} alt="" />
					<p>3 days left</p>
				</div>
			</div>
			<hr class="border-gray-500" />
			<div class="flex items-center gap-4">
				<img class="w-10 rounded-full border-2 border-white" src={avatarImg.src} alt="" />
				<p>Creation of <a class="text-white hover:text-[#00fff7]" href="">Jules Wyvern</a></p>
			</div>
		</div>
	</div>
</div>

<script>
	const imgLink = document.querySelector('.view')
	const viewHover = document.querySelector('.view-div')
	console.log(imgLink, viewHover)
	imgLink?.addEventListener('mouseover', () => {
		viewHover?.classList.remove('hidden')
		viewHover?.classList.add('grid')
	})
	imgLink?.addEventListener('mouseout', () => {
		viewHover?.classList.add('hidden')
		viewHover?.classList.remove('grid')
	})
</script>
